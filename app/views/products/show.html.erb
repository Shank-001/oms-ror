<h1><%= @product.name %></h1>

<p>â‚¹<%= @product.price %></p>

<% if current_user.admin? %>
  <p><strong>Qty: </strong><%= @product.quantity %></p>

  <ul>
    <li><%= link_to "Edit", edit_product_path(@product) %></li>
    <li><%= link_to "Destroy", product_path(@product), data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    } %></li>

  </ul>
<% else %>
  <%= form_with model: @order_product do |f| %>
    <div>
      <%= f.label :quantity, "Quantity: " %>
      <%= f.number_field :quantity, min: 1, max: @product.quantity %>
    </div><br>

    <div>
      <%= f.submit "Add to Cart", class:"btn btn-primary" %>
    </div>
  <% end %>
<% end %>
