<h1>My Cart(OrderProducts)#index</h1>

<table class="table table-hover">
  <thead bgcolor= "#00FF7F">
    <tr>
      <th scope="col">S.No.</th>
      <th scope="col">Product Name</th>
      <th scope="col">Price</th>
      <th scope="col">Quantity</th>
      <th scope="col">Amount</th>
    </tr>
  </thead>
  <tbody>
  	<% @order_products.each do |order_product| %>
	    <tr>
	      <th scope="row">1</th>
	      <td>current_user.order_product.name</td>
	      <td>₹ current_user.order_product.price</td>
	      <td>current_user.order_product.quantity</td>
	      <td>₹ current_user.order_product.price * current_user.order_product.quantity</td>
	    </tr>
	  <% end %>
	  <tr>
	  	<td colspan="4">Total Amount:</td>
	  	<td>₹ </td>
	  </tr>
  </tbody>
</table>


